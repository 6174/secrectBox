<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <!-- Header -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="200dip"
            android:background="#fff">
        <!-- user Info status block-->
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="120dip"
                android:layout_alignParentBottom="true">
            <RelativeLayout
                    android:layout_width="100dip"
                    android:layout_height="80dip"
                    android:layout_marginTop="10dip"
                    android:background="#ff65ffda"
                    android:layout_centerHorizontal="true">
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!-- Body  -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="340dip"
            android:background="#454545">
        <!-- Navigation -->
        <LinearLayout
                android:id="@+id/HomeNavigation"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="300dip"
                android:layout_centerHorizontal="true"
                android:background="#fefefe"
                android:layout_marginTop="10dip"
                android:gravity="center">
            <!-- top block container row-->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="150dip">
                <!-- nav block-->
                <RelativeLayout
                                android:id="@+id/NavFindBtn"
                                android:layout_width="1dip"
                                android:layout_weight="5"
                                android:background="#fe1212"
                                android:layout_height="fill_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="FIND"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="30sp"/>
                </RelativeLayout>
                <!-- nav block-->>
                <RelativeLayout
                        android:id="@+id/NavCreateBtn"
                        android:layout_width="1dip"
                        android:layout_weight="5"
                        android:background="#12fe12"
                        android:layout_height="fill_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="CREATE"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="30sp"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- bottom block container row-->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="150dip">
                <!-- nav block-->
                <RelativeLayout
                        android:id="@+id/NavUserSpaceBtn"
                        android:layout_width="1dip"
                        android:layout_weight="5"
                        android:background="#fefe12"
                        android:layout_height="fill_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="ME"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="30sp"/>
                </RelativeLayout>
                <!-- nav block-->
                <RelativeLayout
                        android:id="@+id/NavSettingBtn"
                        android:layout_width="1dip"
                        android:layout_weight="5"
                        android:background="#12fefe"
                        android:layout_height="fill_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="SETTING"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="30sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

